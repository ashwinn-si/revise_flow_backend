# Environment Configuration
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/revisionflow

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_change_this_in_production
ACCESS_TOKEN_EXP=15m
REFRESH_TOKEN_EXP=30d

# SMTP Configuration (for email)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_password
FROM_EMAIL=noreply@revisionflow.com
FROM_NAME=RevisionFlow

# Client Configuration
CLIENT_URL=http://localhost:3000

# Timezone (for cron jobs)
TZ=UTC

# Google Calendar Integration (OAuth2)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/google/oauth-callback

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
COOKIE_SECRET=your_cookie_secret_change_this_in_production

# Test Configuration (for cron email testing)
TEST_EMAIL=your_email@example.com
TEST_NAME=Your Name